<Window
    x:Class="RAWInspector.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:classes="clr-namespace:RAWInspector.Classes"
    xmlns:command="http://www.galasoft.ch/mvvmlight"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:RAWInspector"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title, TargetNullValue=RAW Inspector}"
    d:DataContext="{d:DesignInstance {x:Type local:Model}}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    AllowDrop="True"
    Closing="OnClosing"
    DragOver="OnDragOver"
    SnapsToDevicePixels="True"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ToolbarStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <local:Model CloseRequest="OnCloseRequest" />
    </Window.DataContext>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Drop">
            <command:EventToCommand
                Command="{Binding Drop}"
                PassEventArgsToCommand="True" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="_File">
                <MenuItem
                    Command="{Binding Commands.Close}"
                    Header="E_xit" />
            </MenuItem>
        </Menu>
        <ToolBarTray
            Grid.Row="1"
            Style="{DynamicResource ToolBarTrayStyle1}">
            <ToolBar Style="{DynamicResource ToolBarStyle1}" />
        </ToolBarTray>
        <ScrollViewer
            Grid.Row="2"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <i:Interaction.Behaviors>
                <classes:ScrollViewerDragBehavior />
                <classes:ScrollViewerWheelZoomBehavior />
                <classes:ScrollViewerWheelScrollBehavior />
            </i:Interaction.Behaviors>
            <Image
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                RenderOptions.BitmapScalingMode="NearestNeighbor"
                Source="{Binding Bitmap}"
                Stretch="None">
                <Image.LayoutTransform>
                    <ScaleTransform />
                </Image.LayoutTransform>
            </Image>
        </ScrollViewer>
    </Grid>

</Window>